---
interface Props {
	route?: string;
}
const { route = "" } = Astro.props;
---

<Fragment slot="head">
	<link rel="stylesheet" href={route + "css/notyf.min.css"} />
	<link rel="stylesheet" href={route + "css/reset.css"} />
	<link
		rel="apple-touch-icon"
		sizes="180x180"
		href={route+"image/apple-touch-icon.png"}
	/>
	<link
		rel="icon"
		type="image/png"
		sizes="32x32"
		href={route+"image/favicon-32x32.png"}
	/>
	<link
		rel="icon"
		type="image/png"
		sizes="16x16"
		href={route+"image/favicon-16x16.png"}
	/>
	<link rel="manifest" href={route+"site.webmanifest"} />
</Fragment>
<Fragment slot="scripts">
	<script type="module" src={route + "js/redirec.js"}></script>
	<script type="module" src={route + "js/theme.js"}></script>
	<script type="module" src={route + "js/popper.min.js"}></script>
	<script type="module" src={route + "js/tippy-bundle.umd.min.js"}></script>
	<script type="module" src={route + "js/init.js"}></script>
</Fragment>

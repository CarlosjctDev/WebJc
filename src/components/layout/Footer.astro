---
import MoonStart from "@assets/icons/moon-start.svg?raw";
import Sun from "@assets/icons/sun.svg?raw";
import Monitor from "@assets/icons/monitor.svg?raw";
---
<footer class="sticky bottom-0 left-0 w-full z-50 pb-3 pt-3 fondo-app-white dark:bg-app_dark">
  <div
    class="max-w-7xl mx-auto flex w-full flex-row items-center justify-between gap-4   px-4 md:px-6 lg:px-8"
  >
    <div
      class="flex flex-col gap-4 text-sm/6 text-gray-700  sm:gap-2 sm:pr-4 dark:text-gray-400 hidden-open-menu  md:opacity-100!  md:h-auto!"
    >
      <span>Copyright Â©&nbsp;2025&nbsp;Carlosjct Dev.</span>
    </div>  
    <div
      class="relative z-0 inline-grid grid-cols-3 gap-0.5 rounded-full bg-gray-950/5  text-gray-950 dark:bg-white/10 dark:text-white p-2"
    >
      <div class="theme-btn *:size-7 sm:*:size-8" data-theme="system">
        <Fragment set:html={Monitor} />
      </div>
      <div class="theme-btn *:size-7 sm:*:size-8" data-theme="light">
        <Fragment set:html={Sun} />
      </div>
      <div class="theme-btn *:size-7 sm:*:size-8" data-theme="dark">
        <Fragment set:html={MoonStart} />
      </div>
    </div>

  </div>
</footer>

